{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "node":true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
      ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
      ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error", {"args": "none"}
        ]
    }
}